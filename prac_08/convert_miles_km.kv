BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        Button:
            text: 'Up'
            on_press: app.handle_increment(1)

        TextInput:
            id: input_miles
            text: '0'
            multiline: False
            input_filter: 'float'
            on_text: app.handle_input_change()

        Button:
            text: 'Down'
            on_press: app.handle_increment(-1)

# The Convert button is now optional or commented out for Stage 2
#     Button:
#         text: 'Convert'
#         on_press: app.handle_input_change()

    Label:
        text: app.output_text
        color: (1, 1, 0, 1)  # yellow text
        font_size: 24
